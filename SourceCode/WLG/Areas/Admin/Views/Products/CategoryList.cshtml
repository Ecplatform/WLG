@{
    ViewBag.Title = "ProductCatogray";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@section Head{
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/js/jquery-easyui-1.3.3/themes/icon.css")" />
    <link href="@Url.Content("~/Content/js/jquery-easyui-1.3.3/themes/default/easyui.css")" rel="stylesheet" type="text/css"/>
    @*<link href="@Url.Content("~/Content/js/jquery-easyui-1.3.3/themes/default/menu.css")" rel="stylesheet" type="text/css" />*@
    <script type="text/javascript" src="@Url.Content("~/Content/js/jquery-easyui-1.3.3/jquery-1.8.0.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/jquery-easyui-1.3.3/jquery.easyui.min.js")"></script>
    <script type="text/javascript" src='@Url.Content("~/Content/js/jquery-easyui-1.3.3/locale/easyui-lang-zh_CN.js")'> </script>
}
<div id="content">
    <h3>
        商品分类管理</h3>
    <div id="toolbar">
        @Html.ActionLink("添加分类", "CategoryAdd", "Products", null, new { @class = "easyui-linkbutton", iconcls = "icon-add", plain = "true" })
    </div>
    <div region="center" style="width: 500px; height: 300px; padding: 1px; overflow-y: hidden">
        <table id="tg" class="easyui-treegrid" data-options="url:'/Admin/Products/LoadCategory/',idField:'CategoryId',treeField:'Name',fit:'true'">
            <thead>
                <tr>
                    <th data-options="field:'Name',width:120">
                        分类名称
                    </th>
                    <th data-options="field:'SKUPrefix',width:100,align:'right'">
                        货号前缀
                    </th>
                    <th data-options="width:200">
                        操作
                    </th>
                </tr>
            </thead>
        </table>
    </div>
</div>
